<div id="feed-wrapper">
  <div id="activity-feed">
    <% @team.activity_feeds.order("created_at ASC").each do |feed| %>
      <div class="feed-item">
        <%= activity_image(feed.feedable)%>
          <span class="comment-user">
          <% if feed.feedable.user%> 
            <%=link_to feed.feedable.user.person.name, people_path(feed.feedable.user.person)%>
            <% else%> 
            Geek Robot
            <%end %>
            </span>
          <span class="comment-body"><%=feed.activity%></span>
        <span class="comment-stamp"><%= activity_type(feed.feedable)%>, <%= time_ago_in_words(feed.created_at)%><span>
      </div>
    <% end %>
    <%= render "shared/comment", :comment => @team %>
    <div style="clear:both; height:0;"></div>
  </div>
</div>
