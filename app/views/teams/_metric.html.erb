
<% if current_user %>
  <% if current_user.teams.where(:id => @team).blank? %>
    <%= button_to "Join this Team!", team_members_path(@team), :class => 'join-btn' %>
  <% end %>
<% end %>


      <ul class="auth_providers">
        <% SETTINGS['providers'].each do |provider| %>
          <li><%= link_to OmniAuth::Utils.camelize(provider), "/auth/#{provider}", :class => provider %>
          <% if auth = current_user.authentications.via(provider).first %>
            <%= link_to '&nbsp;'.html_safe, auth, :class => 'auth-delete', :method => :delete %>
          <% else %>
            <%= link_to '&nbsp;'.html_safe, "/auth/#{provider}", :class => 'auth-add' %>
          <% end %>
          </li>
        <% end %>
      </ul>

