<%= form_for @search, :url => polymorphic_path(resource), :html => {:method => :get} do |f| %>
  <%= f.text_field :name_contains, :id => 'main-search' %>
  <%= f.select :roles_id_equals, Role.all.map {|r| [r.name, r.id] }, {:include_blank => true} %>
  <%= f.select :skills_id_equals, Skill.all.map {|s| [s.name, s.id] }, {:include_blank => true} %>
  <%= f.select :languages_id_equals, Language.all.map {|l| [l.name, l.id] }, {:include_blank => true} %>
  <input id="main-submit" type="image" alt="Search" value="Search" src="/assets/binocular.png" />
<% end %>
