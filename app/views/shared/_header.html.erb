<div id="header">
  <div class="wrapper">
    <div id="gc-logo">
      <%= link_to image_tag('logo-sash.png'), root_path %>
    </div>
    <ul id="main-nav">
      <% if user_signed_in? %>
      <li><%= link_to "Find People", "/people?region=#{region_name_underscored(current_user.region)}", :class => "find-people" %></li>
      <li><%= link_to "Join a Team", "/teams?region=#{region_name_underscored(current_user.region)}" %></li>
      <% else %>
      <li><%= link_to "Find People", people_path %></li>
      <li><%= link_to "Join a Team", teams_path %></li>
      <% end %>
    </ul>
    <div id="account-box">
      <% if user_signed_in? and current_user.region %>
        <%= image_tag current_user.avatar_url, :class => 'current-user-thumb' %>
        Heya <%= link_to current_user.name, current_user.person, :id => 'user-home' %>!
        <p><%= link_to 'Sign Out', sign_out_path, :id => 'sign-out' %> | <%= link_to "Settings", home_users_path, :id => 'user-setting' %></p>
      <% else %>
        <%= link_to "Sign In / Join", sign_in_path, :id => 'sign-in' %>
      <% end %>
    </div>
  </div>
</div>
