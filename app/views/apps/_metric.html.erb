<div id="metric_block" class="sb_container"> 
    <div id="metric_content"> 
        <ul> 
            <li><span class="metric_value"><%=@app.teams.size%></span>Teams</li> 
            <li><span class="metric_value"><%=@app.members.size%></span>Team Members</li> 
        </ul> 
        <div id="join_project_wrapper"> 
        <div id="join_project"> 
          <% if current_user && current_user.region %>
          <% if @app.teams.where(:region_id => current_user.region).blank?%>
            <%= button_to "Start this in #{current_user.region.nick_name}", app_teams_path(@app) %>
          <% else %>
          <%=link_to "Goto #{current_user.region.nick_name}'s Page", @app.teams.where(:region_id => current_user.region).first.to_url%>
          <% end %>
          <% else %>
            Join the Geek Corps to help start this project
          <% end %>
        </div> 
        </div> 
    </div> 
</div>
