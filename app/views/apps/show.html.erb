<%= render :partial => 'header', :object => @app %>

<div id="content">
  <div id="main-bar">

    <div id="visual-intro-box">
      <% unless @app.video.url == '/videos/original/missing.png' %>
        <%= video_tag @app.video.url, :id => 'app-video', :class => 'main-visual' %>
      <% else %>
        <%= image_tag @app.photo.url, :id => 'app-photo', :class => 'main-visual' %>
      <% end %>
      <div id="social-bar"> 
        <div id="fb-root"></div>
        <script src="http://connect.facebook.net/en_US/all.js#xfbml=1"></script>
        <fb:like href="" send="false" width="450" show_faces="true" font=""></fb:like> 
      </div>
    </div>

    <div class="project-text"> 
      <h1>About This Project</h1>
      <p><%= @app.description %></p> 
    </div>

    <%= render :partial => 'activity_stream' %>

  </div>

  <div id="side-bar">
    <%= render :partial => "metric"%>
    <%= render :partial => "core_team"%>
    <%= render :partial => "implementations"%>
  </div>
</div>

