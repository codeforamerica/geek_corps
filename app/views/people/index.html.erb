<% content_for(:page_heading) do %>
  <div id="page-heading">
    <h1>
      People
    </h1>
  </div>
<% end %>

<div id="people-sidebar" class="sidebar_box">
    <h2 class="sidebar_box_title">Filter by:</h2>
    <div class="sidebar_box_content">
<!--    <ul id="active-filters">
        <li class="active-filter"><img src="" class="removal-icon" alt="remove" /><span class="filter-metatext">Skill: </span>Python
        </li>
    </ul>-->
    <div id="remaining-filters">
        <div id="location-filter">
            <h3>Location:</h3>
            <!-- drop down menu goes here - on select, goes to the active-filters section and updates the people -->
        </div>
        <div id="role-filter">
            <h3>Role:</h3>
            <!-- drop down menu goes here - on select, goes to the active-filters section and updates the people -->
        </div>
        <div id="skill-filter">
            <h3>Skills:</h3>
            <ul>
                <% Skill.all.each do |skill| %>
                <li class="skill"><a href=""><%= skill.name %> (<span class="skill-number"><%= rand(40) %></span>)</a></li>
                <% end %>
                <!--<li class="skill"><a href="">Ruby (<span class="skill-number">40</span>)</a></li> -->
            </ul>
            <span>Other skills:</span>
            <!-- autocomplete text box and submit button goes here  -->
        </div>
    </div>
    </div>
</div>
</div>

<div id="people-list">
<%= render :partial => 'shared/list', :object => @people %>
</div>