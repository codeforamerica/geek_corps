<h1>Listing people</h1>

<div id="isotope-container">

<% @people.each do |person| %>
  <div class="isotope-object <%= person.location .downcase.gsub(/[^a-z ]/, '').gsub(/ /, '-') %>"><img src="<%= person.picture %>" /><br />
  <span class="location"><%= person.location %></span><br />
  <span class="crud-links"><%= link_to 'Show', person %> <%= link_to 'Edit', edit_person_path(person) %> <%= link_to 'Delete', person, :confirm => 'Are you sure?', :method => :delete %></span>
  </div>
<% end %>
</div>

