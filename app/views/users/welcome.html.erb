<div id="content">
  <div id="title-main">
    <%= render "people/person_header"%>
  </div>
  <div id="main-bar">
    <div class="project-text">
      <h1>Edit Your Information</h1>
      <% if @person.new_record? %>
        <p><%= "We imported as much info as we could from your #{provider_name(current_user.authentications.first.provider)} account. Look it over and hit the big button to get started."%></p>
      <% else %>      
        <p><%= "You were already in the directory! Please review your details and let us know they're right." %>
      <%end%>
    </div>
    
    <% if @possible_duplicates.present? %>
      <div id="possible_duplicates">
        <h2> Might this be you? </h2>
        <p class="hint">
          It looks like someone may have already added you to <%= SETTINGS['organization']['name'] %>.
          <%= @possible_duplicates.size == 1 ? 'Is this you?' : 'Are you any of these people?' %>
        </p>
        <%= render :partial => 'people/list', :object => @possible_duplicates, :locals => {:context => :claim} %>
      </div>
    <% end %>
    
      <% if @person.new_record? %>
        <%= render :partial => 'people/new_form', :locals => {:context => :add_self} %>
      <% else %>
        <%= render :partial => 'people/form', :locals => {:context => :review} %>
      <% end %>
    </div>
  </div>
  <div id="side-bar">
    <%= render :partial => 'authentications/add_auth_form' %>
    <%= render :partial => 'people/person_edit_image' %>    
  </div>
</div>


