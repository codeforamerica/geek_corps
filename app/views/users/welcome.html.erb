<div id="content">
  <div id="title-main">
    <% if !@person.new_record? %>
      <%= render "people/person_header"%>
    <% else %>
      <h1 class="welcome">Welcome to the Geek Corps!</h1>    
    <% end %>
  </div>
  <div id="main-bar">
    <div class="project-text">
      <h1>Edit Your Information</h1>
      <% if @person.new_record? %>
        <p><%= "We imported as much info as we could from your #{provider_name(current_user.authentications.first.provider)} account. Look it over and hit the big button to get started."%></p>
      <% else %>      
        <p><%= "You were already in the directory! Please review your details and let us know they're right." %>
      <%end%>
    </div>
    <% if @person.new_record?%>
      <%= render :partial => 'people/new_form' %>
    <% else%>
      <%= render :partial => 'people/form' %>
    <% end %>
    </div>
  </div>
  <div id="side-bar">
    <%= render :partial => 'authentications/add_auth_form' %>
    <%= render :partial => 'people/person_edit_image' %>    
  </div>
</div>


